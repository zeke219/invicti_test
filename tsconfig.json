{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "outDir": "tmp",
    "typeRoots": ["/node_modules/@types/"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
